<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jaxrs="http://cxf.apache.org/jaxrs"
       xmlns:cxf="http://cxf.apache.org/core"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-4.2.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd
 http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd
 http://cxf.apache.org/core http://cxf.apache.org/schemas/core.xsd
 http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd">

    <import resource="classpath:META-INF/cxf/cxf.xml"/>

    <context:property-placeholder ignore-resource-not-found="true" order="1" location="release-tracker.properties,file:/config/release-tracker.properties"/>

    <jaxrs:server id="releaseTracker" address="${rest.service.url}">
        <jaxrs:providers>
            <bean class="com.fasterxml.jackson.jaxrs.json.JacksonJsonProvider"/>
            <bean class="com.github.joelws.release.tracker.handler.RuntimeExceptionHandler"/>
            <bean class="com.github.joelws.release.tracker.handler.ReleaseTrackerExceptionHandler"/>
        </jaxrs:providers>
        <jaxrs:serviceBeans>
            <ref bean="createArtifactEndpoint"/>
            <ref bean="readArtifactEndpoint"/>
            <ref bean="updateArtifactEndpoint"/>
            <ref bean="deleteArtifactEndpoint"/>

            <ref bean="createReleaseEndpoint"/>
            <ref bean="readReleaseEndpoint"/>
            <ref bean="updateReleaseEndpoint"/>
            <ref bean="deleteReleaseEndpoint"/>
            <ref bean="listReleaseEndpoint"/>
        </jaxrs:serviceBeans>
    </jaxrs:server>

    <cxf:bus>
        <cxf:features>
            <cxf:logging/>
        </cxf:features>
    </cxf:bus>

    <bean id="dataSource"
          class="com.mchange.v2.c3p0.ComboPooledDataSource"
          destroy-method="close">
        <property name="driverClass" value="org.h2.Driver"/>
        <property name="jdbcUrl" value="jdbc:h2:~/test;AUTO_SERVER=TRUE"/>
        <property name="user" value="sa"/>
        <property name="password" value=""/>

        <property name="maxPoolSize" value="20"/>
        <property name="minPoolSize" value="5"/>
        <property name="maxIdleTime" value="500"/>
        <property name="maxStatements" value="50"/>
    </bean>

    <bean id="entityManagerFactory" class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
        <property name="persistenceUnitName" value="release-tracker"/>
        <property name="persistenceUnitManager">
            <bean class="org.springframework.orm.jpa.persistenceunit.DefaultPersistenceUnitManager">
                <property name="defaultDataSource" ref="dataSource"/>
            </bean>
        </property>
    </bean>

    <bean id="transactionManager" class="org.springframework.orm.jpa.JpaTransactionManager">
        <property name="entityManagerFactory" ref="entityManagerFactory"/>
    </bean>

    <!-- Daos -->
    <bean id="releaseDao" class="com.github.joelws.release.tracker.dao.release.ReleaseDaoImpl"/>
    <bean id="artifactDao" class="com.github.joelws.release.tracker.dao.artifact.ArtifactDaoImpl"/>
    <!-- Helpers -->
    <bean id="jsonAdapter" class="com.github.joelws.release.tracker.util.JsonAdapterImpl"/>
    <bean id="releaseTrackerFactory" class="com.github.joelws.release.tracker.factory.ReleaseTrackerFactory"/>

    <bean id="serviceHelper" class="com.github.joelws.release.tracker.service.ServiceHelper">
        <constructor-arg index="0" ref="jsonAdapter"/>
        <constructor-arg index="1" ref="releaseTrackerFactory"/>
    </bean>

    <!-- Executions -->
    <bean id="createReleaseServiceExecution"
          class="com.github.joelws.release.tracker.service.release.execution.CreateReleaseServiceExecution">
        <constructor-arg index="0" ref="releaseDao"/>
    </bean>

    <bean id="createArtifactServiceExecution"
          class="com.github.joelws.release.tracker.service.artifact.execution.CreateArtifactServiceExecution">
        <constructor-arg index="0" ref="artifactDao"/>
    </bean>

    <bean id="updateReleaseServiceExecution"
          class="com.github.joelws.release.tracker.service.release.execution.UpdateReleaseServiceExecution">
        <constructor-arg index="0" ref="releaseDao"/>
    </bean>

    <bean id="readReleaseServiceExecution"
          class="com.github.joelws.release.tracker.service.release.execution.ReadReleaseServiceExecution">
        <constructor-arg index="0" ref="releaseDao"/>
    </bean>

    <bean id="readArtifactServiceExecution"
          class="com.github.joelws.release.tracker.service.artifact.execution.ReadArtifactServiceExecution">
        <constructor-arg index="0" ref="artifactDao"/>
    </bean>

    <bean id="deleteReleaseServiceExecution"
          class="com.github.joelws.release.tracker.service.release.execution.DeleteReleaseServiceExecution">
        <constructor-arg index="0" ref="releaseDao"/>
    </bean>

    <bean id="deleteArtifactServiceExecution"
          class="com.github.joelws.release.tracker.service.artifact.execution.DeleteArtifactServiceExecution">
        <constructor-arg index="0" ref="artifactDao"/>
    </bean>

    <bean id="listReleaseServiceExecution"
          class="com.github.joelws.release.tracker.service.release.execution.ListReleaseServiceExecution">
        <constructor-arg index="0" ref="releaseDao"/>
    </bean>

    <bean id="listArtifactServiceExecution"
          class="com.github.joelws.release.tracker.service.artifact.execution.ListArtifactServiceExecution">
        <constructor-arg index="0" ref="artifactDao"/>
    </bean>

    <!-- Operations -->
    <bean id="createReleaseServiceOperation"
          class="com.github.joelws.release.tracker.service.release.operation.CreateReleaseServiceOperation">
        <constructor-arg index="0" ref="serviceHelper"/>
        <constructor-arg index="1" ref="createReleaseServiceExecution"/>
    </bean>

    <bean id="createArtifactServiceOperation"
          class="com.github.joelws.release.tracker.service.artifact.operation.CreateArtifactServiceOperation">
        <constructor-arg index="0" ref="serviceHelper"/>
        <constructor-arg index="1" ref="createArtifactServiceExecution"/>
    </bean>

    <bean id="updateReleaseServiceOperation"
          class="com.github.joelws.release.tracker.service.release.operation.UpdateReleaseServiceOperation">
        <constructor-arg index="0" ref="serviceHelper"/>
        <constructor-arg index="1" ref="updateReleaseServiceExecution"/>
    </bean>

    <bean id="updateArtifactServiceOperation"
          class="com.github.joelws.release.tracker.service.artifact.operation.UpdateArtifactServiceOperation"/>

    <bean id="readReleaseServiceOperation"
          class="com.github.joelws.release.tracker.service.release.operation.ReadReleaseServiceOperation">
        <constructor-arg index="0" ref="serviceHelper"/>
        <constructor-arg index="1" ref="readReleaseServiceExecution"/>
    </bean>

    <bean id="readArtifactServiceOperation"
          class="com.github.joelws.release.tracker.service.artifact.operation.ReadArtifactServiceOperation">
        <constructor-arg index="0" ref="serviceHelper"/>
        <constructor-arg index="1" ref="readArtifactServiceExecution"/>
    </bean>

    <bean id="deleteReleaseServiceOperation"
          class="com.github.joelws.release.tracker.service.release.operation.DeleteReleaseServiceOperation">
        <constructor-arg index="0" ref="serviceHelper"/>
        <constructor-arg index="1" ref="deleteReleaseServiceExecution"/>
    </bean>

    <bean id="deleteArtifactServiceOperation"
          class="com.github.joelws.release.tracker.service.artifact.operation.DeleteArtifactServiceOperation">
        <constructor-arg index="0" ref="serviceHelper"/>
        <constructor-arg index="1" ref="deleteArtifactServiceExecution"/>
    </bean>

    <bean id="listReleaseServiceOperation"
          class="com.github.joelws.release.tracker.service.release.operation.ListReleaseServiceOperation">
        <constructor-arg index="0" ref="serviceHelper"/>
        <constructor-arg index="1" ref="listReleaseServiceExecution"/>
    </bean>

    <bean id="listArtifactServiceOperation"
          class="com.github.joelws.release.tracker.service.artifact.operation.ListArtifactServiceOperation">
        <constructor-arg index="0" ref="serviceHelper"/>
        <constructor-arg index="1" ref="listArtifactServiceExecution"/>
    </bean>

    <!-- Services -->
    <bean id="releaseService" class="com.github.joelws.release.tracker.service.release.ReleaseService">
        <constructor-arg index="0" ref="createReleaseServiceOperation"/>
        <constructor-arg index="1" ref="readReleaseServiceOperation"/>
        <constructor-arg index="2" ref="updateReleaseServiceOperation"/>
        <constructor-arg index="3" ref="deleteReleaseServiceOperation"/>
        <constructor-arg index="4" ref="listReleaseServiceOperation"/>
    </bean>

    <bean id="artifactService" class="com.github.joelws.release.tracker.service.artifact.ArtifactService">
        <constructor-arg index="0" ref="createArtifactServiceOperation"/>
        <constructor-arg index="1" ref="readArtifactServiceOperation"/>
        <constructor-arg index="2" ref="updateArtifactServiceOperation"/>
        <constructor-arg index="3" ref="deleteArtifactServiceOperation"/>
        <constructor-arg index="4" ref="listArtifactServiceOperation"/>
    </bean>

    <!-- Endpoints -->
    <bean id="createArtifactEndpoint"
          class="com.github.joelws.release.tracker.endpoint.artifact.CreateArtifactEndpoint">
        <constructor-arg index="0" ref="artifactService"/>
    </bean>
    <bean id="readArtifactEndpoint" class="com.github.joelws.release.tracker.endpoint.artifact.ReadArtifactEndpoint">
        <constructor-arg index="0" ref="artifactService"/>
    </bean>
    <bean id="updateArtifactEndpoint"
          class="com.github.joelws.release.tracker.endpoint.artifact.UpdateArtifactEndpoint">
        <constructor-arg index="0" ref="artifactService"/>
    </bean>
    <bean id="deleteArtifactEndpoint"
          class="com.github.joelws.release.tracker.endpoint.artifact.DeleteArtifactEndpoint">
        <constructor-arg index="0" ref="artifactService"/>
    </bean>

    <bean id="createReleaseEndpoint" class="com.github.joelws.release.tracker.endpoint.release.CreateReleaseEndpoint">
        <constructor-arg index="0" ref="releaseService"/>
    </bean>
    <bean id="readReleaseEndpoint" class="com.github.joelws.release.tracker.endpoint.release.ReadReleaseEndpoint">
        <constructor-arg index="0" ref="releaseService"/>
    </bean>
    <bean id="updateReleaseEndpoint" class="com.github.joelws.release.tracker.endpoint.release.UpdateReleaseEndpoint">
        <constructor-arg index="0" ref="releaseService"/>
    </bean>
    <bean id="deleteReleaseEndpoint" class="com.github.joelws.release.tracker.endpoint.release.DeleteReleaseEndpoint">
        <constructor-arg index="0" ref="releaseService"/>
    </bean>
    <bean id="listReleaseEndpoint"
          class="com.github.joelws.release.tracker.endpoint.release.ListReleaseEndpoint">
        <constructor-arg index="0" ref="releaseService"/>
    </bean>


    <tx:annotation-driven transaction-manager="transactionManager"/>

    <context:annotation-config/>

    <bean class="org.springframework.dao.annotation.PersistenceExceptionTranslationPostProcessor"/>

</beans>
